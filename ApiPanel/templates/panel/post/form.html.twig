{% extends 'base.html.twig' %}

{% block container %}
    <div class="container">
        <div class="p-5 mb-4 rounded-3 d-flex flex-row flex-wrap mb-3 justify-content-around">
            {{ form_start(form, {'method': "POST"}) }}
            <div class="row">
                <div class="mb-3">
                    {{ form_row(form.title) }}
                </div>

                <div class="mb-3">
                    {{ form_row(form.content) }}
                </div>
            </div>

            <div class="d-flex justify-content-end align-items-center pe-2">
                <button class="btn btn-primary btn-block" type="submit" style="margin-top: 10px;">
                    Save
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}